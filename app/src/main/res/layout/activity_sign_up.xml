<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background04"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.michaelsinner.sabergo.Activities.SignUp">


    <TextView
        android:text="@string/txSubSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:id="@+id/tvSignupSubtitulo" />

    <TextView
        android:text="@string/txNombreEstudiante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_below="@+id/tvSignupSubtitulo"
        android:layout_alignStart="@+id/tvSignupSubtitulo"
        android:layout_marginTop="31dp"
        android:id="@+id/tvNombreEstudiante" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/tvNombreEstudiante"
        android:layout_alignStart="@+id/tvNombreEstudiante"
        android:id="@+id/etNombreEstudiante"
        android:background="#ffffff"
        android:paddingTop="5dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/txCorreoEstudiante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCorreoEstudiante"
        android:textColor="#000000"
        android:layout_below="@+id/etNombreEstudiante"
        android:layout_alignStart="@+id/etNombreEstudiante" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:background="#ffffff"
        android:layout_below="@+id/tvCorreoEstudiante"
        android:layout_alignStart="@+id/tvCorreoEstudiante"
        android:paddingTop="5dp"
        android:id="@+id/etCorreoEstudiante"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/txUsuarioEstudiante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_below="@+id/etCorreoEstudiante"
        android:layout_alignStart="@+id/etCorreoEstudiante"
        android:id="@+id/tvUsuarioEstudiante" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/tvUsuarioEstudiante"
        android:layout_alignStart="@+id/tvUsuarioEstudiante"
        android:id="@+id/etUsuarioEstudiante"
        android:background="#ffffff"
        android:paddingTop="5dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/txContraseñaEstudiante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_below="@+id/etUsuarioEstudiante"
        android:layout_alignStart="@+id/etUsuarioEstudiante"
        android:id="@+id/tvContraseñaEstudiante" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:background="#ffffff"
        android:id="@+id/etContraseñaEstudiante"
        android:layout_below="@+id/tvContraseñaEstudiante"
        android:layout_alignStart="@+id/tvContraseñaEstudiante"
        android:paddingTop="5dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/txColegioEstudiante"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_below="@+id/etContraseñaEstudiante"
        android:layout_alignStart="@+id/etContraseñaEstudiante" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:background="#ffffff"
        android:ems="10"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:id="@+id/etColegioEstudiante"
        android:paddingTop="5dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Registrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etColegioEstudiante"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/btnRegistrar" />


</RelativeLayout>
