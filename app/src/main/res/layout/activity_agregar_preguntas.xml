<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.michaelsinner.trainingicfes.AgregarPreguntas">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/titulo"
        android:textColor="#a23250bc"
        android:textSize="40dp"
        android:id="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Escriba el Enunciado de la Pregunta"
        android:id="@+id/txtViewEnunciado"
        android:textSize="25dp"
        android:layout_below="@+id/spnCompetencia"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Escriba las 4 Opciones de Respuesta"
        android:id="@+id/txtViewRespustas"
        android:textSize="20dp"
        android:layout_below="@+id/editTextEnunciado"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spnArea"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Área de la Pregunta:"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:width="30dp"
        android:layout_alignParentEnd="true"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Competencia de la Pregunta"
        android:id="@+id/txtViewSpinner2"
        android:layout_below="@+id/spnArea"
        android:layout_alignParentStart="true"
        android:textSize="25dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spnCompetencia"
        android:spinnerMode="dropdown"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtViewSpinner2"
        android:layout_alignParentLeft="true" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enunciado"
        android:id="@+id/editTextEnunciado"
        android:layout_below="@+id/txtViewEnunciado"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/OpcionA"
        android:hint="Enunciado de Respuesta A"
        android:layout_below="@+id/txtViewRespustas"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/OpcionB"
        android:hint="Enunciado de Respuesta B"
        android:layout_below="@+id/OpcionA"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/OpcionC"
        android:hint="Enunciado de Respuesta C"
        android:layout_below="@+id/OpcionB"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/OpcionD"
        android:hint="Enunciado de Respuesta D"
        android:layout_below="@+id/OpcionC"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar"
        android:id="@+id/btnAgregar"
        android:layout_below="@+id/OpcionD"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>

</ScrollView>
