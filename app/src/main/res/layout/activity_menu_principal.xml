<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorMain"
    tools:context="com.example.michaelsinner.trainingicfes.MenuPrincipal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/titulo"
        android:textColor="#a23250bc"
        android:textSize="40sp"
        android:id="@+id/tvTitulo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txMenuPrincipal"
        android:id="@+id/tvMenuPrincipal"
        android:layout_below="@+id/tvTitulo"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txIniciarPartida"
        android:id="@+id/btnIniciar"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/tvMenuPrincipal"
        android:layout_alignEnd="@+id/btnAgregarPreguntas"
        android:layout_alignStart="@+id/btnAgregarPreguntas" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txAgregarPreguntas"
        android:id="@+id/btnAgregarPreguntas"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/btnVerLogros"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txAgregarEstudiantes"
        android:id="@+id/btnAgregarEstudiante"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/btnAgregarPreguntas"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txVerLogros"
        android:id="@+id/btnVerLogros"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/btnIniciar"
        android:layout_alignStart="@+id/btnIniciar"
        android:layout_alignEnd="@+id/btnAgregarEstudiante" />


</RelativeLayout>
