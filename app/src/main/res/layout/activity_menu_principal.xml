<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.michaelsinner.trainingicfes.MenuPrincipal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/titulo"
        android:textColor="#a23250bc"
        android:textSize="40dp"
        android:id="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MenÃº Principal"
        android:id="@+id/txtViewMenu"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar partida"
        android:id="@+id/btnIniciar"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/txtViewMenu"
        android:layout_alignEnd="@+id/btnAgregarPreguntas"
        android:layout_alignStart="@+id/btnAgregarPreguntas" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Logros"
        android:id="@+id/btnVerLogros"
        android:layout_below="@+id/btnAgregarPreguntas"
        android:layout_alignStart="@+id/btnAgregarPreguntas"
        android:layout_alignEnd="@+id/btnAgregarPreguntas" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Preguntas"
        android:id="@+id/btnAgregarPreguntas"
        android:layout_below="@+id/btnIniciar"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:id="@+id/btnSalir"
        android:layout_below="@+id/btnVerLogros"
        android:layout_alignEnd="@+id/btnVerLogros"
        android:layout_alignStart="@+id/btnVerLogros" />


</RelativeLayout>
